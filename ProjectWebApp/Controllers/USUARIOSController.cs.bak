        [HttpPost]
        [ValidateAntiForgeryToken]
        public ActionResult Edit([Bind(Include = "USER,PASS,TIMESTAMP,ID_ROL,RUT,ID_USER")] USUARIOS uSUARIOS)
        {
            if (ModelState.IsValid)
