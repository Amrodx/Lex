@model LexAbogadosWeb.Models.CLIENTES
@{
    ViewBag.Title = "Perfil";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";

}
@using LexAbogadosWeb.Models
@{
    USUARIOS uProfile = (USUARIOS)Session["LoginCredentials"];
}
<!-- page content -->
@<div class="right_col" role="main">
    @
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Perfil Cliente</h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Informacion general <small></small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="#">Settings 1</a>
                                </li>
                                <li>
                                    <a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="col-md-3 col-sm-3 col-xs-12 profile_left">
                        <div class="profile_img">
                            <div id="crop-avatar">
                                <!-- Current avatar -->
                                @if (uProfile.BINARY_IMAGE == null)
                                {
                                    <img src="data:image;base64,@System.Convert.ToBase64String(uProfile.BINARY_IMAGE)" alt="Avatar" class="img-responsive avatar-view" />
                                }
                                else
                                {
                                    <img src="https://safety.uncc.edu/sites/safety.uncc.edu/files/styles/directory-list/public/fields/directory/field_directory_image/default-avatar_2.png?itok=CUJno2j0" alt="Avatar" class="img-responsive avatar-view" />
                                }
                                @<img class="img-responsive avatar-view" src="images/picture.jpg" alt="Avatar" title="Change the avatar">@
                            </div>
                        </div>
                        <h3>
                            @Html.DisplayFor(model => model.NOMBRE_RAZON_SOCIAL)
                        </h3>
                        <ul class="list-unstyled user_data">
                            <li>
                                @<i class="fa fa-map-marker user-profile-icon"></i>@
                                <strong>Rut: </strong> @Html.DisplayFor(model => model.RUT)
                            </li>
                            <li>
                                @<i class="fa fa-map-marker user-profile-icon"></i>@
                                <strong>Estado: </strong> @Html.DisplayFor(model => model.STATUS_ACTIVACION)
                            </li>
                            <li>
                                @<i class="fa fa-map-marker user-profile-icon"></i>@
                                <strong>Observaciones: </strong> @Html.DisplayFor(model => model.OBSERVACIONES)
                            </li>
                        </ul>
                        @<a class="btn btn-success"><i class="fa fa-edit m-right-xs"></i>Edit Profile</a>@
                        <br />
                    </div>
                    <div class="col-md-9 col-sm-9 col-xs-12">

                        <!-- start of user-activity-graph -->
                        <div id="graph_bar" style="width:100%; height:280px;">
                            <section class="content invoice">
                                <!-- title row -->
                                <div class="row">
                                    <div class="col-xs-12 invoice-header">
                                        <h1>
                                            <i class="fa fa-envelope"></i> Datos de Contacto
                                            <small class="pull-right">Fecha de Creacion: @Html.DisplayFor(model => model.TIMESTAMP)</small>
                                        </h1>
                                    </div>
                                    <!-- /.col -->
                                </div>
                                <!-- info row -->
                                <div class="row invoice-info">
                                    <div class="col-sm-4 invoice-col">
                                        <i class="fa fa-home"></i> Direccion
                                        <address>
                                            <strong>Region</strong>
                                            <br> @ViewBag.Region
                                            <br><strong>Comuna</strong>
                                            <br> @ViewBag.Comuna
                                            <br><strong>Direccion</strong>
                                            <br> @Html.DisplayFor(model => model.DIRECCION)
                                        </address>
                                    </div>
                                    <!-- /.col -->
                                    <div class="col-sm-4 invoice-col">
                                        <i class="fa fa-envelope-o"></i> Contactos
                                        <address>
                                            <strong>Correo</strong>
                                            <br> @Html.DisplayFor(model => model.CORREO)
                                            <br><strong>Contacto</strong>
                                            <br> @Html.DisplayFor(model => model.CONTACTO)
                                        </address>
                                    </div>
                                    <!-- /.col -->
                                    <div class="col-sm-4 invoice-col">
                                        <i class="fa fa-phone-square"></i> Telefonos
                                        <address>
                                            <strong>Numero Primario</strong>
                                            <br> @Html.DisplayFor(model => model.FONO1)
                                            <br><strong>Numero Segundario</strong>
                                            <br> @Html.DisplayFor(model => model.FONO2)
                                        </address>
                                    </div>
                                    <!-- /.col -->
                                </div>
                                <!-- /.row -->

                                <div class="row">
                                    <hr>
                                    @if (uProfile.ID_ROL == 61)
                                    {
                                        <div class="col-xs-6">
                                            <p class="lead">Plan de Pago Actual</p>
                                            <div class="table-responsive">
                                                <table class="table">
                                                    <tbody>
                                                        @*<tr>
                                                                <th style="width:50%">Subtotal:</th>
                                                                <td>$250.30</td>
                                                            </tr>*@
                                                        <tr>
                                                            <th>Nombre del Plan: </th>
                                                            <td> @ViewBag.DescPlan</td>
                                                        </tr>
                                                        <tr>
                                                            <th>Valor del Plan: </th>
                                                            <td>@ViewBag.ValPlan</td>
                                                        </tr>
                                                        @*<tr>
                                                                <th>Total:</th>
                                                                <td>$265.24</td>
                                                            </tr>*@
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    }

                                    <!-- /.col -->
                                </div>
                                <!-- /.row -->
                                <!-- this row will not appear when printing -->
                                <div class="row no-print">
                                    <div class="col-xs-12">
                                        @<button class="btn btn-default" onclick="window.print();"><i class="fa fa-print"></i> Print</button>@
                                        @<button class="btn btn-success pull-right"><i class="fa fa-credit-card"></i> Submit Payment</button>@
                                        <a href="@Url.Action("DataContact", new { id = Model.ID_CLIENTE })" class="btn btn-success pull-right"><i class="fa fa-edit m-right-xs"></i> Modificar datos de Contacto </a>
                                        @<button class="btn btn-primary pull-right" style="margin-right: 5px;"><i class="fa fa-download"></i> Generate PDF</button>@
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@*  *@
</div>
