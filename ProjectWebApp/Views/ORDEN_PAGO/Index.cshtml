@model IEnumerable<ProjectWebApp.Models.ORDEN_PAGO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Lista de Pagos</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            @Html.ActionLink("Registrar pago", "Create")
                        </li>
                    </ul>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div id="datatable-buttons_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">

                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline" cellspacing="0" width="100%" role="grid" aria-describedby="datatable-responsive_info" style="width: 100%;">
                    <thead>
                        <tr role="row">

                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: auto;" aria-label="Position: activate to sort column ascending">Tipo Pago</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: auto;" aria-label="Position: activate to sort column ascending">Monto Total</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: auto;" aria-label="Position: activate to sort column ascending">Cuotas</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: auto;" aria-label="Position: activate to sort column ascending">Valor por Cuota</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: auto;" aria-label="Position: activate to sort column ascending">Estado</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: auto;" aria-label="Position: activate to sort column ascending">Número de transacción</th>

                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 200px;" aria-label="Salary: activate to sort column ascending">Acción</th>
                        </tr>
                    </thead>


                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr ole="row" class="odd">
                            <td>
                                @Html.DisplayFor(modelItem => item.TIPO_PAGO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MONTO_TOTAL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CUOTAS)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.VALOR_CUOTA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ESTADO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NUMERO_TRANSACCION)
                            </td>

                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = item.ID_ORDEN_PAGO }) |
                                @Html.ActionLink("Detalle", "Details", new { id = item.ID_ORDEN_PAGO }) |
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_ORDEN_PAGO })
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
                <div class="dataTables_paginate paging_simple_numbers" id="datatable-buttons_paginate">
                </div>
            </div>
        </div>
    </div>
</div>